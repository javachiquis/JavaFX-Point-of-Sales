<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.effect.*?>
<?import javafx.scene.layout.*?>

<VBox alignment="CENTER" blendMode="DARKEN" minHeight="-Infinity" minWidth="-Infinity" prefHeight="370.0" prefWidth="450.0" styleClass="vBox-background" stylesheets="@../styles/invoice.css" xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <HBox alignment="CENTER_RIGHT" blendMode="ADD" maxHeight="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="45.0" prefWidth="450.0" VBox.vgrow="NEVER">
         <children>
            <Button blendMode="LIGHTEN" mnemonicParsing="false" onAction="#closeAction" prefHeight="33.0" prefWidth="36.0" styleClass="close-button" textFill="#861515" textOverrun="CENTER_ELLIPSIS">
               <effect>
                  <Lighting>
                     <bumpInput>
                        <ImageInput />
                     </bumpInput>
                     <light>
                        <Light.Distant />
                     </light>
                  </Lighting>
               </effect>
               <cursor>
                  <Cursor fx:constant="HAND" />
               </cursor></Button>
         </children>
         <padding>
            <Insets bottom="5.0" left="10.0" right="10.0" top="5.0" />
         </padding>
      </HBox>
      <HBox alignment="CENTER" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="450.0" VBox.vgrow="ALWAYS">
         <children>
            <GridPane alignment="CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="250.0" prefWidth="350.0">
              <columnConstraints>
                <ColumnConstraints hgrow="SOMETIMES" minWidth="10.0" prefWidth="100.0" />
              </columnConstraints>
              <rowConstraints>
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" vgrow="SOMETIMES" />
                <RowConstraints minHeight="10.0" prefHeight="30.0" valignment="CENTER" vgrow="SOMETIMES" />
              </rowConstraints>
               <children>
                  <TextField fx:id="totalAmountField" alignment="CENTER" editable="false" />
                  <TextField fx:id="paidAmountField" alignment="CENTER" promptText="Valor Pagado" GridPane.rowIndex="1" />
                  <Button mnemonicParsing="false" onAction="#confirmAction" prefHeight="44.0" prefWidth="351.0" styleClass="buttons" text="Pagar" GridPane.rowIndex="2" />
               </children>
            </GridPane>
         </children>
      </HBox>
   </children>
</VBox>
